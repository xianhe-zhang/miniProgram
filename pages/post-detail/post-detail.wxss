
.container{
  display: flex;
  flex-direction: column;
}

.head-image{
  width: 100%;
  height: 460rpx;
  
}

.author-date{ 
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  margin-left: 30rpx;
}

.avatar{
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.author{
  font-size: 24rpx;
  font-weight: 350;
  margin-left: 20rpx;
  color:#666;

}

.const-text{
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
  margin-top: 3rpx
}

.date{
  font-size: 24rpx;
  margin-left: 18rpx;
  color: #999;
  margin-top: 3rpx
}

.title{
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color:#4b556c;
}

/* align-items是用来控制子元素在交叉轴上的位置；justify-content是控制子元素在主轴上的位置 */
.tool{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top:20rpx;
}

.circle{
  display: flex;
  width: 660rpx;
  flex-direction: row;
  justify-content: flex-end;
}

.circle image{
  width: 90rpx;
  height: 90rpx;
}

.share-img{
  margin-left: 30rpx;
}

.horizon{
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  position: absolute;
  z-index: -99;
}

.detail {
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}

.audio{
  width:102rpx;
  height: 110rpx;
  position:absolute;
  left: 50% ;
  margin-left: -51rpx;
  top: 185rpx ; /* 230-15*/
  opacity: 0.6;
}